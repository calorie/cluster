#!/bin/sh

user_home=<%= @user_home %>
server_ip=<%= @server_ip %>
mount_dir=<%= @mount_dir %>
keys_dir=${mount_dir}/keys
public_key=${keys_dir}/`hostname`.pub

[ -d $keys_dir ] || mkdir $keys_dir

if ! mountpoint -q $mount_dir ; then
  mount -t nfs -o rw,proto=tcp,port=2049 ${server_ip}:${mount_dir} $mount_dir
fi

if [ ! -f $public_key ]; then
  cp ${user_home}/.ssh/id_rsa.pub $public_key
fi
